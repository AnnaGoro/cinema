<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="library_unit" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>com.gorobchenkoa.model.entity.Movie</class>
        <class>com.gorobchenkoa.model.entity.User</class>
        <class>com.gorobchenkoa.model.entity.Report</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.search.default.directory_provider" value="ram"/>
            <property name="hibernate.search.default.autoregister_listeners " value="true"/>
        </properties>
    </persistence-unit>
</persistence>


